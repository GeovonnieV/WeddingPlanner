<div>
    <h1>Plan Your Wedding</h1>
    @* <a href="Dashboard/@ViewBag.CurrentUserId">DashBoard</a> *@
    @* Form to add wedding *@
    @model Wedding 
    <form asp-action="NewWeddingPost" asp-controller="Home" method="post">
        @* wedder one input *@
        <span asp-for="WedderOne"></span>
        <label asp-for="WedderOne">Wedder One:</label>
        <input type="text" asp-for="WedderOne"></input>
        <br>
        @* wedder two input *@
        <span asp-for="WedderTwo"></span>
        <label asp-for="WedderTwo">Wedder Two:</label>
        <input type="text" asp-for="WedderTwo"></input>
        <br>
        @* wedding date input *@
        <span asp-for="WeddingDate"></span>
        <label asp-for="WeddingDate">Wedder Date:</label>
        <input type="date" asp-for="WeddingDate"></input>
        <br>
        @* wedding addy *@
        <span asp-for="Address"></span>
        <label asp-for="Address">Wedding Address:</label>
        <input type="text" asp-for="Address"></input>
        <br>
        @* wedding needs a userID in it so we put this users id in it in a hidden input *@
        <input type="hidden" asp-for="UserId" value="@ViewBag.CurrentUserId">

        <button type="submit">Create</button>
    </form>


</div>